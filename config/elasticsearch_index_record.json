{
  "index": "record",
  "body": {
    "settings": {
      "analysis": {
        "number_of_shards": 5,
        "number_of_replicas": 0,
        "index.query.default_field": "timestamp",
        "index.mapping.ignore_malformed": "false",
        "index.mapping.coerce": "false",
        "index.query.parse.allow_unmapped_fields": "false",
        "normalizer": {
          "ignorecase": {
            "type": "custom",
            "filter": ["lowercase", "asciifolding"]
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "timestamp": {
          "type": "date",
          "format": "epoch_seconds"
        },
        "pname": {
          "type": "keyword"
        },
        "pid": {
          "type": "integer"
        },
        "mem": {
          "type": "integer"
        },
        "cpu": {
          "type": "float"
        }
      }
    }
  }
}
