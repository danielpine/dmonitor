{
  "index": "record",
  "body": {
    "settings": {
      "analysis": {
        "normalizer": {
          "ignorecase": {
            "type": "custom",
            "filter": ["lowercase", "asciifolding"]
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "timestamp": {
          "type": "date",
          "format": "epoch_seconds"
        },
        "pname": {
          "type": "keyword",
          "normalizer": "ignorecase"
        },
        "pid": {
          "type": "integer"
        },
        "mem": {
          "type": "integer"
        },
        "cpu": {
          "type": "float"
        }
      }
    }
  }
}
